<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/set_schedule_background">

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/info" android:gravity="center"
            android:textStyle="bold"
            android:text="202202652 하태영" android:textSize="28sp"/>

    <CheckBox
            android:background="@drawable/set_scehdule_checkbox"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info"
            app:layout_constraintBottom_toTopOf="@id/lunch"
            android:text="아침"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/breakfast"/>
    <CheckBox
            android:background="@drawable/set_scehdule_checkbox"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/breakfast"
            app:layout_constraintBottom_toTopOf="@id/dinner"
            android:text="점심"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/lunch"/>
    <CheckBox
            android:background="@drawable/set_scehdule_checkbox"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lunch"
            app:layout_constraintBottom_toBottomOf="@id/button"
            android:text="저녁"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/dinner"/>
    <Button
            android:background="@drawable/initial_savebutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dinner"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="저장"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"/>

</androidx.constraintlayout.widget.ConstraintLayout>